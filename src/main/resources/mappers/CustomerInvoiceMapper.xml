<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tm.broadband.mapper.CustomerInvoiceMapper">
	
	<!-- 
		
	-->
	<insert id="insertCustomerInvoice" parameterType="CustomerInvoice">
		INSERT INTO `tm_customer_invoice`(
			`invoice_serial`, `customer_id`, `order_id`, `create_date`, 
			`amount_payable`, `amount_paid`, `balance`, `status`, `memo`) 
		VALUES (
			#{invoice_serial},#{customer.id},#{order.id},#{create_date},
			#{amount_payable},#{amount_paid},#{balance},#{status},#{memo})
	</insert>
	
</mapper>