<mapper namespace="com.tm.broadband.mapper.CallInternationalRateMapper">

	<!-- DEFINITION AREA -->
	<sql id="callInternationalRateColumns">
		c.`area_prefix` 		as c_area_prefix,
		c.`rate_type` 			as c_rate_type,
		c.`area_name` 			as c_area_name,
		c.`rate_cost` 			as c_rate_cost
	</sql>
	



	<resultMap type="CallInternationalRate" id="callInternationalRateResultMap">
		<result property="area_prefix" column="c_area_prefix" />
		<result property="rate_type" column="c_rate_type" />
		<result property="area_name" column="c_area_name" />
		<result property="rate_cost" column="c_rate_cost" />
	</resultMap>
	
	<sql id="callInternationalRateWhere">
		<where>
			<if test="params.area_prefix != null">c.area_prefix = #{params.area_prefix}</if>
			<if test="params.rate_type != null">and c.rate_type = #{params.rate_type}</if>
			<if test="params.area_name != null">and c.area_name = #{params.area_name}</if>
			<if test="params.rate_cost != null">and c.rate_cost = #{params.rate_cost}</if>
		</where>
	</sql>
	<!-- // DEFINITION AREA -->
	
	<!-- =================================================================================== -->

	<!-- SELECT AREA -->
	
	<select id="selectCallInternationalRate" parameterType="CallInternationalRate" resultType="CallInternationalRate">
		select * from tm_call_international_rates as c
		<include refid="callInternationalRateWhere"/>
	</select>
	
	<!-- select callInternationalRate page -->
	<select id="selectCallInternationalRatesByPage" parameterType="Page" resultMap="callInternationalRateResultMap">
		select 
			<include refid="callInternationalRateColumns"/>
			from tm_call_international_rates as c
			<include refid="callInternationalRateWhere"/>
			<if test="params.orderby != null">${params.orderby}</if>
			limit #{pageOffset}, #{pageSize}
	</select>

	<!-- select callInternationalRate amount -->
	<select id="selectCallInternationalRatesSum" parameterType="Page" resultType="int">
		select count(*) from tm_call_international_rates as c
		<include refid="callInternationalRateWhere"/>
	</select>

	<!-- select callInternationalRate amount -->
	<select id="selectCallInternationalRateByAreaPrefix" parameterType="String" resultType="CallInternationalRate">
		select * from tm_call_international_rates as c where area_prefix = #{0}
	</select>

	<!-- // END SELECT AREA -->

	<!-- =================================================================================== -->

	<!-- INSERT AREA -->

	<insert id="insertCallInternationalRate" parameterType="CallInternationalRate">
		INSERT INTO `tm_call_international_rates`(
			`area_prefix`, `rate_type`, `area_name`, `rate_cost`
		) VALUES (
			#{area_prefix}, #{rate_type}, #{area_name}, #{rate_cost}
		)
	</insert>

	<!-- // END INSERT AREA -->

	<!-- =================================================================================== -->
	
	<!-- UPDATE AREA -->
	
	<!-- update callInternationalRate -->
	<update id="updateCallInternationalRate" parameterType="CallInternationalRate">
		update tm_call_international_rates
		<set>
			<if test="area_prefix != null">area_prefix = #{area_prefix},</if>
			<if test="rate_type != null">rate_type = #{rate_type},</if>
			<if test="area_name != null">area_name = #{area_name},</if>
			<if test="rate_cost != null">rate_cost = #{rate_cost}</if>
		</set>
	</update>

	<!-- // END UPDATE AREA -->

	<!-- =================================================================================== -->

	<!-- DELETE AREA -->
	
	<delete id="deleteCallInternationalRate">
		DELETE FROM tm_call_international_rates
	</delete>
	
	<!-- // END DELETE AREA -->

</mapper>