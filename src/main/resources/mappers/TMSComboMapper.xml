<mapper namespace="com.tm.broadband.mapper.TMSComboMapper">

	<!-- DEFINITION AREA -->

	<sql id="tMSComboColumns">
		tmsc.`id`				as tmsc_id,
		tmsc.`name`				as tmsc_name,
		tmsc.`wholesale_price`				as tmsc_wholesale_price,
		tmsc.`selling_price`				as tmsc_selling_price,
		tmsc.`earned_price`				as tmsc_earned_price
	</sql>

	<resultMap type="TMSCombo" id="tMSComboResultMap">
		<id property="id" column="tmsc_id" />
		<result property="name" column="tmsc_name" />
		<result property="wholesale_price" column="tmsc_wholesale_price" />
		<result property="selling_price" column="tmsc_selling_price" />
		<result property="earned_price" column="tmsc_earned_price" />
	</resultMap>

	<sql id="tMSComboWhere">
		<where>
			<if test="params.id != null">tmsc.id = #{params.id}</if>
			<if test="params.name != null">and tmsc.name = #{params.name}</if>
			<if test="params.wholesale_price != null">and tmsc.wholesale_price = #{params.wholesale_price}</if>
			<if test="params.selling_price != null">and tmsc.selling_price = #{params.selling_price}</if>
			<if test="params.earned_price != null">and tmsc.earned_price = #{params.earned_price}</if>
		</where>
	</sql>

	<!-- // DEFINITION AREA -->

	<!-- =================================================================================== -->

	<!-- SELECT AREA -->

	<select id="selectTMSCombo" parameterType="TMSCombo" resultType="TMSCombo">
		select * from tms_combo as tmsc
		<include refid="tMSComboWhere"/>
	</select>

	<!-- select tMSCombo page -->
	<select id="selectTMSCombosByPage" parameterType="Page" resultMap="tMSComboResultMap">
		select 
			<include refid="tMSComboColumns"/>
			from tms_combo as tmsc
			<include refid="tMSComboWhere"/>
			<if test="params.orderby != null">${params.orderby}</if>
			limit #{pageOffset}, #{pageSize}
	</select>

	<!-- select tMSCombo amount -->
	<select id="selectTMSCombosSum" parameterType="Page" resultType="int">
		select count(*) from tms_combo as tmsc
		<include refid="tMSComboWhere"/>
	</select>

	<!-- // END SELECT AREA -->

	<!-- =================================================================================== -->

	<!-- INSERT AREA -->

	<insert id="insertTMSCombo" parameterType="TMSCombo" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO `tms_combo`(
			`name`, `wholesale_price`, `selling_price`, `earned_price`
		) VALUES (
			#{name}, #{wholesale_price}, #{selling_price}, #{earned_price}
		)
	</insert>

	<!-- // END INSERT AREA -->

	<!-- =================================================================================== -->

	<!-- UPDATE AREA -->

	<!-- update tMSCombo -->
	<update id="updateTMSCombo" parameterType="TMSCombo">
		update tms_combo
		<set>
			<if test="name != null">name = #{name},</if>
			<if test="wholesale_price != null">wholesale_price = #{wholesale_price},</if>
			<if test="selling_price != null">selling_price = #{selling_price},</if>
			<if test="earned_price != null">earned_price = #{earned_price}</if>
		</set>
		<where>
			<if test="params.id != null">id = #{params.id}</if>
		</where>
	</update>

	<!-- // END UPDATE AREA -->

	<!-- =================================================================================== -->
	<!-- DELETE AREA -->

	<delete id="deleteTMSComboById" parameterType="int">
		DELETE FROM tms_combo WHERE id = #{0}
	</delete>

	<!-- // END DELETE AREA -->

</mapper>