	<!-- when customer register or administrator create customer, insert customer  information -->
	<insert id="insertCustomer" parameterType="Customer" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO `tm_customer`(
		`login_name`, `password`, `md5_password`, `user_name`, `first_name`, `last_name`,
		`address`, `email`, `phone`, `cellphone`, `status`, `invoice_post`,
		`register_date`, `active_date`, `balance`, 
		`title`, `birth`, `driver_licence`, `passport`, `country`, `company_name`, `customer_type`,
		`identity_type`, `identity_number`)
		VALUES (
		#{login_name}, #{password}, #{md5_password}, #{user_name}, #{first_name}, #{last_name}, 
		#{address}, #{email}, #{phone}, #{cellphone}, #{status}, #{invoice_post},
		#{register_date}, #{active_date}, #{balance},
		#{title}, #{birth}, #{driver_licence}, #{passport}, #{country}, #{company_name}, #{customer_type},
		#{identity_type}, #{identity_number})
	</insert>

