	<!-- select customer page -->
	<select id="selectCustomersByPage" parameterType="Page" resultMap="selectCustomersByPageResultMap">
		select 
			<include refid="customerColumns"/>,
			<include refid="organizationColumns"/>
			from tm_customer as c
		left join tm_customer_order as co on co.customer_id = c.id
		left join tm_organization as o on o.customer_id = c.id
		<include refid="customerWhere"/>
		<if test="params.orderby != null">${params.orderby}</if>
		limit #{pageOffset}, #{pageSize}
	</select>

	<!-- select customer amount -->
	<select id="selectCustomersSum" parameterType="Page" resultType="int">
		select count(*) from tm_customer as c
		left join tm_customer_order as co on co.customer_id = c.id
		left join tm_organization as o on o.customer_id = c.id
		<include refid="customerWhere"/>
	</select>
	
